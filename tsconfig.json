{
  "compilerOptions": {
    "outDir": "./lib",
    "sourceMap": true,
    "module": "ESNext",
    "target": "ES6",
    "moduleResolution": "node",
    "removeComments": false,
    "declaration": true,
    "declarationDir": "./types",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "strictFunctionTypes": true,
    "esModuleInterop": true,
    "paths": {
      "mathjs": ["./types/index.d.ts"]
    },
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "js": {
    "checkJs": true
  }
}

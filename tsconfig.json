{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "module": "ESNext",
    "target": "ES6",
    "moduleResolution": "node",
    "removeComments": false,
    "declaration": true,
    "declarationDir": "./dist/types",
    "lib": ["ES6", "DOM"],
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "strictFunctionTypes": true,
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}
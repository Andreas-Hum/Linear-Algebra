{
  "compilerOptions": {
    "outDir": "./lib",
    "sourceMap": true,
    "module": "ESNext",
    "allowImportingTsExtensions": true,
    "target": "ES6",
    "moduleResolution": "node",
    "removeComments": false,
    "declaration": true,
    "declarationDir": "./types",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "strictFunctionTypes": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,

  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "js": {
    "checkJs": true
  }
}